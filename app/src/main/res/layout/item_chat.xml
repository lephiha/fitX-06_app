<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <!-- Avatar Circle -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAvatarInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_gradient_blue" />

            <!-- Online indicator -->
            <View
                android:id="@+id/viewOnlineIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_online_indicator" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Coach Name -->
    <TextView
        android:id="@+id/tvCoachName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Coach Táº¥n"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/cvAvatar"
        app:layout_constraintTop_toTopOf="@id/cvAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvTime" />

    <!-- Last Message -->
    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HÃ´m nay táº­p tá»‘t láº¯m! ðŸ’ª"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tvCoachName"
        app:layout_constraintTop_toBottomOf="@id/tvCoachName"
        app:layout_constraintEnd_toEndOf="@id/tvCoachName" />

    <!-- Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintEnd_toStartOf="@id/cvUnreadBadge"
        app:layout_constraintTop_toTopOf="@id/tvCoachName" />

    <!-- Unread Badge -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvUnreadBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCoachName"
        app:layout_constraintBottom_toBottomOf="@id/tvLastMessage">

        <TextView
            android:id="@+id/tvUnreadCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/bg_gradient_pink_header" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>