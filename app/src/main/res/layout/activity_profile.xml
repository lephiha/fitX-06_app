<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header với gradient pink -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_pink_header"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FitX-06"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Profile Avatar & Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="24dp">

            <!-- Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_avatar_placeholder">

                    <TextView
                        android:id="@+id/tvAvatarInitials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="NA"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Name -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Phi Hề"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Membership -->
            <TextView
                android:id="@+id/tvMembership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gói PRO - Hết hạn 15/03/2025"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:alpha="0.9" />

            <!-- Edit Profile Button -->
            <TextView
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa hồ sơ"
                android:textColor="@color/primary_pink"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Cân nặng -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_pink">

                        <TextView
                            android:id="@+id/tvWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75 kg"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_pink" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cân nặng"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Chiều cao -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_blue"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="175 cm"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chiều cao"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Row Stats -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- BMI -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_green">

                        <TextView
                            android:id="@+id/tvBMI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24.5"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMI"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Mục tiêu -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_purple"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảm cân"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mục tiêu"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Options -->

            <!-- Chỉnh sửa thông tin -->
            <LinearLayout
                android:id="@+id/layoutEditInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_person"
                    android:padding="8dp"
                    android:background="@drawable/bg_icon_pink_light"
                    app:tint="@color/primary_pink" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chỉnh sửa thông tin"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC" />
            </LinearLayout>

            <!-- Gia hạn gói tập -->
            <LinearLayout
                android:id="@+id/layoutRenewPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_credit_card"
                    android:padding="8dp"
                    android:background="@drawable/bg_icon_pink_light"
                    app:tint="@color/primary_pink" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gia hạn gói tập"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC" />
            </LinearLayout>

            <!-- Tiến độ & Thành tích -->
            <LinearLayout
                android:id="@+id/layoutProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chart"
                    android:padding="8dp"
                    android:background="@drawable/bg_icon_green_light"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiến độ &amp; Thành tích"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC" />
            </LinearLayout>

            <!-- Cài đặt -->
            <LinearLayout
                android:id="@+id/layoutSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings"
                    android:padding="8dp"
                    android:background="@drawable/bg_icon_gray_light"
                    app:tint="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cài đặt"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#CCCCCC" />
            </LinearLayout>

            <!-- Activity Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_purple"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tóm tắt hoạt động tháng này"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMonthSessions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buổi tập"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:alpha="0.9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMonthWeightLoss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5kg"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giảm cân"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:alpha="0.9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMonthCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6,840"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calo đốt"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:alpha="0.9" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>