<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ScrollView chứa nội dung -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card - Pink -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_gradient_pink_header"
                    android:padding="20dp">

                    <!-- Top Row: Title & Bell Icon -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FITX-06"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bell"
                            android:padding="8dp"
                            android:layout_alignParentEnd="true"
                            app:tint="#FFFFFF" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tập là thích"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- User Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#EC4899">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Hàng trên: Avatar + Info + Bell -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Avatar -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="30dp"
                            app:cardBackgroundColor="#D946A6">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chào, Lê Phi Hà!"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gói PRO - Còn 45 ngày"
                                android:textSize="13sp"
                                android:textColor="#FCEFFF"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Bell -->
                        <ImageView
                            android:id="@+id/ivBellSmall"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bell"
                            android:padding="8dp"
                            app:tint="#FFFFFF" />
                    </LinearLayout>

                    <!-- Hàng dưới: Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <!-- Buổi tập -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                android:textSize="24sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buổi tập"
                                android:textSize="12sp"
                                android:textColor="#FCEFFF" />
                        </LinearLayout>

                        <!-- Ngày streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textSize="24sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày streak"
                                android:textSize="12sp"
                                android:textColor="#FCEFFF" />
                        </LinearLayout>

                        <!-- Đã giảm -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-5kg"
                                android:textSize="24sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã giảm"
                                android:textSize="12sp"
                                android:textColor="#FCEFFF" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Quick Actions Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <!-- Check-in QR -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFF0F5"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_qr"
                            android:layout_gravity="center"
                            app:tint="#EC4899" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Check-in QR"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Lịch Tập -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E3F2FD"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_gravity="center"
                            app:tint="#2196F3" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Lịch Tập"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Chương Trình -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#F3E5F5"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_workout"
                            android:layout_gravity="center"
                            app:tint="#9C27B0" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Chương\nTrình"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Tiến Độ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E8F5E9"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_chart"
                            android:layout_gravity="center"
                            app:tint="#4CAF50" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tiến Độ"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Row 2 -->
                <!-- Dinh Dưỡng -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFF3E0"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_nutrition"
                            android:layout_gravity="center"
                            app:tint="#FF9800" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Dinh Dưỡng"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Cộng Đồng -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FFF8E1"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_trophy"
                            android:layout_gravity="center"
                            app:tint="#FFC107" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Cộng Đồng"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Thanh Toán -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#FCE4EC"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_payment"
                            android:layout_gravity="center"
                            app:tint="#E91E63" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Thanh Toán"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Chat PT -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#E1F5FE"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_chat"
                            android:layout_gravity="center"
                            app:tint="#03A9F4" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Chat PT"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                </LinearLayout>

            </GridLayout>

            <!-- Hôm nay Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hôm nay"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:textSize="14sp"
                    android:textColor="#EC4899"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Today's Session PT 1-1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/bg_gradient_blue"
                    android:gravity="center_vertical">

                    <!-- Calendar Icon -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#FFFFFF" />

                    <!-- Session Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PT 1-1"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:00 - 19:00"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Check-in Button -->
                    <Button
                        android:id="@+id/btnCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Check-in"
                        android:textSize="14sp"
                        android:textColor="#03A9F4"
                        android:background="@drawable/bg_button_white_small"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Yoga Class -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/bg_gradient_purple"
                    android:gravity="center_vertical">

                    <!-- Calendar Icon -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#FFFFFF" />

                    <!-- Session Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Class"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19:30 - 20:30"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Check-in Button -->
                    <Button
                        android:id="@+id/btnCheckInYoga"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Check-in"
                        android:textSize="14sp"
                        android:textColor="#9C27B0"
                        android:background="@drawable/bg_button_white_small"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Thử thách tuần này Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thử thách tuần này"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="80dp" />



        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>